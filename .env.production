# Production Environment Variables
# DO NOT commit this file to version control
# Use secrets management service (AWS Secrets Manager, Azure Key Vault, etc.)

# Application Settings
APP_NAME=PawPal Voice Pet Care Assistant
DEBUG=false
ALLOWED_HOSTS=["https://api.pawpal.com", "https://www.pawpal.com"]

# Database Settings (Use production database URL)
DATABASE_URL=postgresql+asyncpg://username:password@db-host:5432/pawpal_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Cache Settings
REDIS_URL=redis://redis-host:6379/0
REDIS_ENABLED=true
CACHE_DEFAULT_TTL=300

# Security Settings (Generate strong keys in production)
SECRET_KEY=CHANGE_THIS_TO_STRONG_RANDOM_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_TIMEOUT_MINUTES=60
SESSION_IDLE_TIMEOUT_MINUTES=30

# Encryption Settings
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY_ROTATION_DAYS=90

# HTTPS/TLS Settings
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# External API Keys (Use secrets manager)
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
SCALEDOWN_API_KEY=your-scaledown-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@pawpal.com

# AI Model Configuration
AI_PROVIDER=gemini
PRIMARY_AI_MODEL=gemini-2.5-pro
FALLBACK_AI_MODEL=gemini-2.5-flash
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1000

# Voice Interface Settings
STT_PROVIDER=web_speech_api
TTS_PROVIDER=web_speech_api
TTS_VOICE=nova
TTS_SPEED=0.95

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["pdf", "jpg", "jpeg", "png", "doc", "docx"]

# Notification Settings
MEDICATION_REMINDER_MINUTES=15
APPOINTMENT_REMINDER_HOURS=[24, 2]

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Error Tracking (Sentry)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
